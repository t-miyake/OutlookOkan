                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <CheckBox Margin="0,0,8,0" IsChecked="{Binding EnableGetContactGroupMembers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
